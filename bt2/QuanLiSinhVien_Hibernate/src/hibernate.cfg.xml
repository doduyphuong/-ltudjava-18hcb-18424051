<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/quanlysinhvien?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="pojos/Course.hbm.xml"/>
    <mapping resource="pojos/ClassRoom.hbm.xml"/>
    <mapping resource="pojos/Student.hbm.xml"/>
    <mapping resource="pojos/TableScore.hbm.xml"/>
    <mapping resource="pojos/ClassRoomCourse.hbm.xml"/>
    <mapping resource="pojos/CalenderCourse.hbm.xml"/>
    <mapping resource="pojos/Account.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
